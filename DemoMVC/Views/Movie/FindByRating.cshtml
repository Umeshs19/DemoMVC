@{
}
@using(Html.BeginForm())
{
    <p>
        Select Rating : 
        @Html.DropDownList("rating");
        <input type="submit" value="Find Rating" />
    </p>
    <hr/>
}
@if(ViewBag.Data != null)
{
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Year</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in ViewBag.Data)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.Name</td>
                <td>@data.Year</td>
                <td>@data.Rating</td>
            </tr>
        }
    </tbody>
</table>
}